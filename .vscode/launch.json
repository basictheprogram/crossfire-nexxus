{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Nexxus",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
